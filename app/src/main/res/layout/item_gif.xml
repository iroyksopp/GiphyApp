<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        app:layout_constraintBottom_toTopOf="@id/gifTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/gifImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"/>

    <TextView
        android:id="@+id/gifTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/gifImageView"
        app:layout_constraintStart_toStartOf="@id/gifImageView"
        app:layout_constraintTop_toBottomOf="@id/gifImageView" />

    <ImageView
        android:id="@+id/deleteGif"
        android:src="@drawable/delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/gifTitle"
        app:layout_constraintStart_toStartOf="@id/gifTitle"
        app:layout_constraintTop_toBottomOf="@id/gifTitle"/>


</androidx.constraintlayout.widget.ConstraintLayout>





